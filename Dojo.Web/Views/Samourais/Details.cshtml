@model Dojo.Domain.Entities.Samourai

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Samourai</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Strength)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Strength)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Arme)
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.Arme.Name)*@
            @if (Model.Arme != null)
            {
                <a href="/Armes/Details/@Model.Arme.Id">@Model.Arme.Name</a>
            }
            else
            {
                <i>[aucune arme]</i>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArtsMartiaux)
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.Arme.Name)*@
            @if (Model.ArtsMartiaux != null)
            {
                @foreach (var artM in Model.ArtsMartiaux)
                {
                    <a href="/ArtsMartiaux/Details/@artM.Id">@artM.Name</a>
                }
            }
            else
            {
                <i>[aucun art martial]</i>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Potential)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Potential)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
